<div class="container">
    <h2 class="display-5">Search Authors</h2>
    <form class="d-flex" action="/authors" method="GET">
    <h5 class="m-1">Name</h5>
    <input class="form-control me-2" type="text" name="name" placeholder="Search" value="<%= searchOptions.name %>">
    <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
    <br>
    <% authors.forEach(author => { %>

        <div class="card text-bg-dark mb-3" style="width: 20rem;">
            <div class="card-body">
            <h5 class="card-title"><%= author.name %></h5>
            <a href="/authors/<%= author.id %>" class="btn btn-primary">View</a>
            <a href="/authors/<%= author.id %>/edit" class="btn btn-primary">Edit</a>
            <%- include('../partials/deleteForm',
                    { url: `/authors/${author.id}` }) %>
            </div>
        </div>
    <% }) %>
</div>