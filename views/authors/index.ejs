<div class="container">
    <h2 class="display-5  mt-5">Search Authors</h2>
    <form class="d-flex" action="/authors" method="GET">
    <h5 class="m-1 mt-4 me-2">Name</h5>
    <input class="form-control me-2 mt-4" type="text" name="name" placeholder="Search" value="<%= searchOptions.name %>">
    <button class="btn btn-outline-success mt-4" type="submit">Search</button>
    </form>
    <br>
    <div class="row">
        <% authors.forEach(author => { %>
            <div class="col">
                <div class="card text-bg-dark mb-3 mt-4" style="width: 20rem;">
                    <div class="card-body">
                    <h5 class="card-title mt-2"><%= author.name %></h5>
                    <a href="/authors/<%= author.id %>" class="btn btn-primary mt-2">View</a>
                    <a href="/authors/<%= author.id %>/edit" class="btn btn-primary mt-2">Edit</a>
                    <%- include('../partials/deleteForm',
                            { url: `/authors/${author.id}` }) %>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>