<div class="container">
  <h2 class="display-5"><%= author.name %></h2>
  <a href="/authors/<%= author.id %>/edit" class="btn btn-primary">Edit</a>
  <%- include('../partials/deleteForm',
              { url: `/authors/${author.id}` }) %>
  <% if (booksByAuthor.length > 0) { %>
    <h2 class="display-5">Books By Author</h2>
    <% booksByAuthor.forEach(book => { %>
    <a href="/books/<%= book.id %>">
      <img height="150" width="100" src="<%= book.coverImagePath %>">
    </a>
    <% }) %>
  <% } %>
</div>